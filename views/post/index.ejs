<link rel="stylesheet" href="/css/post_style.css">

<script defer src="/scripts/edit_comment.js"></script>
<br>
<% posts.forEach((post)=>{ %>
  <br>
  <div class="userPost">
  <img src="<%=post.user.profilePic%>" alt="profilePic">
  <%=post.user.userName%></div>
<div class="box">
  <div class="post-container">
  
    <div class="imgOrVideo">
    <% if(post.type == "image"){ %>
      <img src="/<%= post.path %>" alt="post image" class="img">
    <% }else if(post.type == "video"){ %>
      <iframe width="560" height="315" src="<%=post.path%>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    <% } %>
  </div>
    <div class="post-description">
      <%= post.description %>
      <% if(currentUser){ %>
        <form action="/comment/add?id=<%= post._id %>" method="post">
          <input type="hidden" name="user" value="<%= currentUser.id %>">
          <input type="text" name="content" class="comment">
          <button>comment</button>
        </form>
      <form action="/like?id=<%= post._id %>" method="post"><button><img class="like" src="/profilePic/he.jpeg" alt=""></button></form>
      <% }else{ %>
        <input type="text" name="content">
        <button onclick='window.location="/user/signin"'>comment</button>
        <button onclick='window.location="/user/signin"'>
          <img class="like" src="/profilePic/he.jpeg" alt="like">
        </button>
      <% } %>
    </div>
    likes: <%= post.likes.length %>
    <div class="comments-container">
      <% post.comment.forEach((comment)=>{ %>
        <% if(currentUser){ %>
          <% if(currentUser.id.toString() == comment.user._id.toString()){ %>
            <div class="comment-container editable">
              <p data-id="<%= comment._id %>"><%= comment.content %></p>
            </div>
          <% }else{ %>
            <div class="comment-container">
              <%= comment.content %>
            </div>
          <% } %>
        <% }else{ %>
          <div class="comment-container">
            <%= comment.content %>
          </div>
        <% } %>
      <% }) %>
     
    </div>
  </div>
</div>
<% }) %>

