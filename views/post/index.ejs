
<link rel="stylesheet" href="/css/post_style.css">

<h1>posts</h1>
<br>
<% posts.forEach((post)=>{ %>

  <br>
  <div class="post-container">
    <div class="imgOrVideo">
    <% if(post.type == "image"){ %>
      <img src="/<%= post.path %>" alt="post image">
    <% }else if(post.type == "video"){ %>
      <iframe width="560" height="315" src="<%= post.path %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    <% } %></div>
    <div class="post-description">
      <%= post.description %>
      <% if(currentUser){ %>
        <form action="/comment/add" method="post">
        <input type="hidden" name="user" value="<%= currentUser.id %>">
        <input type="hidden" name="post" value="<%= post._id %>">
        <input type="text" name="content">
        <button>comment</button>
      </form>
      <form action="/like?id=<%= post._id %>" method="post"><button><img class="like" src="/profilePic/he.jpeg" alt=""></button></form>
      <% }else{ %>
        <input type="text" name="content">
        <button onclick='window.location="/user/signin"'>comment</button>
        <button onclick='window.location="/user/signin"'><img class="like" src="/profilePic/he.jpeg" alt=""></button>
      <% } %>
    </div>
    likes: <%= post.likes.length %>
  </div>

<% }) %>

