<script defer src="/scripts/Select_media.js"></script>
<link rel="stylesheet" href="/css/create_post_page.css">
<div class="panel">

<form action="/post/update" method="post">
  <h1>Edit post</h1>
  <div>
    <label>type</label>
    <select name="type">
      <option value="" selected disabled hidden></option>
      <option value="noMedia">no media</option>
      <option value="image">image</option>
      <option value="video">video</option>
    </select>
  </div>
  <br>
  
  <div id="mediaSource">
    <% if(post.type == "image"){ %>
      <img src="/<%= post.path %>" alt="post image" class="img">
    <% }else if(post.type == "video"){ %>
      <iframe width="560" height="315" src="<%= post.path %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    <% } %>
  </div>

  <div id="description">
    <label>description</label>
    <textarea type="text" name="description" class="input-filed" cols="40" rows="5" value="<%= post.description %>" >
    </textarea>
  </div>

  <input type="hidden" name="user" value="<%= currentUser.id %>">
  <input type="hidden" name="id" value="<%= post._id %>">
  <button type="submit"><h3>update</h3></button>

</form>
  
</div>